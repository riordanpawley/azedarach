#!/bin/sh
# Pre-commit hook: Run biome on staged files

# Get list of staged .ts and .tsx files
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(ts|tsx)$')

if [ -z "$STAGED_FILES" ]; then
  # No TypeScript files staged, skip
  exit 0
fi

echo "Running biome check on staged files..."

# Run biome check with --staged flag
bun run biome check --staged --no-errors-on-unmatched

BIOME_EXIT=$?

if [ $BIOME_EXIT -ne 0 ]; then
  echo ""
  echo "Biome check failed. Fix issues before committing:"
  echo "  bun run biome check --write ."
  echo ""
  exit 1
fi

exit 0
