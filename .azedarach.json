{
	"worktree": {
		"initCommands": ["direnv allow", "bun install", "bd sync"],
		"continueOnFailure": true,
		"parallel": false
	},
	"git": {
		"pushBranchOnCreate": true,
		"remote": "origin",
		"branchPrefix": "az-"
	},
	"session": {
		"command": "opencode",
		"shell": "zsh",
		"tmuxPrefix": "C-a"
	},
	"merge": {
		"validateCommands": ["bun run type-check"],
		"fixCommand": "bun run fix",
		"maxFixAttempts": 2,
		"startClaudeOnFailure": true
	}
}
